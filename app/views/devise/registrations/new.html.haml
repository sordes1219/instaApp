= image_tag 'nobunaga.jpg', class: 'top-image'
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field 
      = f.label :account, class: 'text_small'
    .field
      = f.text_field :account, class: 'text'
    .field
      = f.label :email, class: 'text_small'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
    .field
      = f.label :password, class: 'text_small'
      - if @minimum_password_length
        %em{ class: 'text_small' }
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'text'
    .field
      = f.label :password_confirmation, class: 'text_small'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'text'
    .link
      = render "devise/shared/links", class: 'text_small'
    .actions
      = f.submit "Sign up"